/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.navigationBar {
  width: 500rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.location {
  margin-left: 150rpx;
  margin: auto;
  width: 100%;
  height: 80rpx;
  background-color: #f5a77d;
}

.location image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}

.location text {
  font-size: 80%;
}